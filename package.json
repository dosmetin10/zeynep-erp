{
  "name": "mtn-muhasebe",
  "version": "0.2.1",
  "description": "MTN Muhasebe masaustu uygulamasi temel iskelet",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "test": "node --test tests/*.test.js",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.mtn.muhasebe",
    "productName": "MTN Muhasebe",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.6.2"
  },
  "engines": {
    "node": ">=20 <25"
  }
}
